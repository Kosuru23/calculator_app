<%= stylesheet_link_tag 'quadratic', media: 'all' %>

<h1>Quadratic Equation Solver</h1>

<%= form_with url: quadratic_path, method: :post, local: true, data: { turbo: false }, html: { class: 'quadratic-form' } do %>
  <h3>Enter values for a, b, and c (a ≠ 0):</h3>
  <div class="quadratic-row">
    <%= text_field_tag :a, params[:a], placeholder: "a", class: 'quadratic-input' %>
    <span>(x²)</span>
    <%= text_field_tag :b, params[:b], placeholder: "b", class: 'quadratic-input' %>
    <span>(x)</span>
    <%= text_field_tag :c, params[:c], placeholder: "c", class: 'quadratic-input' %>
    <span>(constant)</span>
  </div>
  <div class="quadratic-btn-row">
    <%= submit_tag "Solve" %>
  </div>
<% end %>

<% if @solution %>
  <h2>Result: <%= @solution %></h2>
<% end %>

