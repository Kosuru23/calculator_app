<%= stylesheet_link_tag 'linear', media: 'all' %>

<h1>Linear Equation Solver</h1>

<h2> Solve 2x2 Linear System</h2>

<%= form_with url: linear_path, method: :post, local: true, data: { turbo: false }, class: 'linear-form' do %>
  <div class="linear-row">
    <%= text_field_tag  :a1, params[:a1], placeholder: "a₁", class: 'linear-input' %>
    <span>x +</span>
    <%= text_field_tag  :b1, params[:b1], placeholder: "b₁", class: 'linear-input' %>
    <span>y =</span>
    <%= text_field_tag :c1, params[:c1], placeholder: "c₁", class: 'linear-input' %>
  </div>
  <div class="linear-row">
    <%= text_field_tag  :a2, params[:a2], placeholder: "a₂", class: 'linear-input' %>
    <span>x +</span>
    <%= text_field_tag  :b2, params[:b2], placeholder: "b₂", class: 'linear-input' %>
    <span>y =</span>
    <%= text_field_tag  :c2, params[:c2], placeholder: "c₂", class: 'linear-input' %>
  </div>
  <%= submit_tag "Solve 2x2" %>
<% end %>

<% if @x && @y %>
  <h2>Result: x = <%= @x %>, y = <%= @y %></h2>
<% end %>

<hr>

<h2> Solve 1-Variable Equation (e.g. y – 3 = 2y + 1)</h2>

<%= form_with url: linear_path, method: :post, local: true, data: { turbo: false }, class: 'linear-form' do %>
  <%= hidden_field_tag :type, "single" %>
  <%= text_field_tag :equation, params[:equation], size: 50, placeholder: "Enter equation like (y-3)/4 + ... = 1", class: 'linear-input1' %>
  <%= submit_tag "Solve 1-Variable" %>
<% end %>

<% if @single_solution %>
  <h2>Result: <%= @single_solution %></h2>
<% end %>

<% if @error %>
  <p style="color:red;"><%= @error %></p>
<% end %>


